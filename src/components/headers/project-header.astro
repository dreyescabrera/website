---
import externalResource from "@/assets/icons/external-resource.svg?raw";
import { Link } from "../ui/link";
import Icon from "../utils/icon.astro";
import ArticleHeader from "./article-header.astro";

interface Props {
  title: string;
  date: string;
  categories: string[];
  client: string;
  url: string;
}

const { title, date, categories, client, url } = Astro.props;
---

<ArticleHeader
  title={title}
  date={date}
  categories={categories}
  person={{ name: client, title: "Client" }}
>
  <Link
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    variant="outline"
    className="max-lg:w-full"
  >
    Live Preview
    <Icon icon={externalResource} class="size-5" />
  </Link>
</ArticleHeader>
