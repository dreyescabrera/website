---
import { Picture } from "astro:assets";

interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<figure class="w-full rounded-xl shadow-sm ring-1 ring-zinc-200">
  <Picture
    src={src}
    alt={alt}
    formats={["avif", "webp"]}
    width={1920}
    height={1280}
    class="w-full rounded-xl object-cover"
  />
</figure>
