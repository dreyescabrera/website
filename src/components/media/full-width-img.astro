---
import { Picture } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  withMargin?: boolean;
}

const { src, alt, withMargin } = Astro.props;
---

<figure class="w-full rounded-xl shadow-sm ring-1 ring-zinc-200">
  <Picture
    src={src}
    alt={alt}
    formats={["avif", "webp"]}
    width={1920}
    height={1920}
    class={`w-full rounded-xl object-cover ${withMargin ? "my-10" : ""}`}
  />
</figure>
