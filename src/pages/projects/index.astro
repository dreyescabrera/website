---
import SimpleContactMeSection from "@/components/contact/simple-contact-me-section.astro";
import WorkList from "@/components/personal-info/work-list.astro";
import MainLayout from "@/layouts/main-layout.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<MainLayout title="Projects" description="My personal projects">
  <main>
    <h1>Projects</h1>

    <p class="mb-10 mt-2.5 sm:mb-14">
      I'm always looking for new projects to work on. If you're interested in
      working with me, feel free to reach out.
    </p>

    <WorkList
      list={projects.map((project) => ({
        ...project.data,
        url: `/projects/${project.id}`,
        img: {
          src: project.data.imgUrl,
          alt: project.data.title,
        },
      }))}
    />

    <SimpleContactMeSection />
  </main>
</MainLayout>
